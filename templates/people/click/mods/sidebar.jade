include ../../mixins/interest.jade

.well#aside-click
  table.click-indexes
    tr
      td
        h3 契合指数
        .click-number #{String(clicks.score || 0)}
      td.click-grade #{click_grade}
  p.reliability 可信度: 
    strong #{clicks.reliability}% 
    a(href="/about/click", title="查看什么叫「可信度」") [?]
if (locals.mutual_keywords && mutual_keywords.length)
  h2 共同阅读关键字
  mixin tagcloud(mutual_keywords)
hr
if !req.user
  p.muted &gt; 
    a(href="/mine") 我也想要这样的报表
else if req.user != people
    p.muted &gt; 
      a(href="#{req.user.click_url(people)}") 看看我与#{people.name}
    p.muted &gt; 
      a(href="#{req.user.click_url(other)}") 看看我与#{other.name}
else
  p.muted &gt; 
    a(href="/mine") 返回我的友邻
