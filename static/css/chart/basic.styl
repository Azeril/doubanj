text
  font-size: 11px;

.chart
  padding: 10px;
  margin-bottom: 20px;
  height: 160px; // default height
  position: relative;

  .caption
    position: absolute;
    width: 100%;
    bottom: 0;
    text-align: center;

.chart-bar
  height: 260px;

  .legend
    fill: #777;

.arc path
  stroke: #fff;

.axis path,
.axis line
  fill: none;
  stroke: #bbb;
  shape-rendering: crispEdges;

.bar-style-toggler
  line-height: 1;
  label
    vertical-align: middle;
    margin-left: 1em;
    input
      margin-right: 3px;
