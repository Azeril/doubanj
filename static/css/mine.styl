@import './widgets/avatar_list.styl'

.logins
  margin: 5% 5% 10%;
  h2
    text-align: center;
    margin: 20px;

  .douban-login
    text-align: center;
    border-right: dashed 1px #ddd;
    padding: 30px 30px 80px;

#main
  padding: 40px 0;

.mod
  padding: 10px 20px;
  h2
    border-bottom: 1px solid #ddd;
    margin-top: 0;
    margin-bottom: 20px;

.aside
  background: #f9f6f3;
  border-radius: 4px;
  h2
    border-bottom-color: #d9d9d9;

.friends
  ul
    margin: 20px 0;
  .btn-block
    font-weight: 100;
    background: #e6e6e6;
    border: 0;
    color: #666;
    margin: 40px;
    width: auto;
  .disabled:hover
    background: #e9e9e9;
