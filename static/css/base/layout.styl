.vmiddle
  margin: 10% auto;
  padding: 20px;
  max-width: 600px;
  text-align: center;

h1, h2, h3, h4
  font-family: sans;
  margin-bottom: 0.5em;

h1
  font-size: h1_size;
  text-align: center;

h2
  font-size: h2_size;
  .btn
    margin: 0 0.5em;
    vertical-align: text-top;
h3
  font-size: h3_size;
h4
  font-size: h4_size;

#footer
  border-top: 1px solid #eee;
  padding: 20px;
  text-align: right;
  font-size: 0.8em;
  a
    color: #666;
    margin-left: 10px;
    &:hover
      color: #333;

#main
  padding-bottom: 20px;

.desc
  line-height: 1.4em;
  font-size: desc_size;

.people-intro
  .pull-right
      display: inline-block;
      margin: 0 0 0.5em 0.5em;

.alert
  p
    margin: 0.5em 0;
  .progress
    margin-bottom: 0;

.btn-compact, .label-compact
  font-weight: 200;
  padding: 0 0.2em;
  line-height: 1.4em;

.mod
  margin-bottom: 2em;

.tagcloud
  margin-bottom: 1em;

.tag-item
  display: inline-block;
  margin-right: 0.7em;
  a
    margin-right: 0 0.1em;
  .muted
    font-size: 0.9em;

.list-small
  font-size: 0.8em;
  margin-left: 1.5em;

.breadcrumb
  margin: 20px 0;
