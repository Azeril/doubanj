.rbox-list
  margin 0
  a
    display: block;
    position: relative;
    padding: 8px
    border 1px solid #e0e0e0
    color: #333;
    font-size: 12px;
    border-radius(3px)

    &:hover
      text-decoration: none;
      background: #fffdfa;
      border-color: #f98;
    .title
      color: #45b;
      font-size: 14px;
      margin: 0.8em 0 0;
    .rbox-supple
      border-top: 1px solid #f98;

  p
    margin: 0.5em 0 0.3em;
    line-height: 1.3em

  .pic
    margin: 0.6em auto;
    text-align: center;
    img
      border: 1px solid #eee;
      padding: 3px;
      border-radius(2px)

  li
    vertical-align: top;
    display inline-block
    margin 10px 8px 30px

.rbox-supple
  border: 1px solid #ddd;
  border-top: 0;
  background: #fafafa;
  padding: 10px;
  font-size: 12px;
  position: absolute;
  right: -1px;
  display: none;
  width: 106px;
  border-radius(0 0 3px 3px);
  box-sizing(content-box);

li:hover .rbox-supple
  display: block;

.mixed-stars
  text-align: center
  .splitter
    color: #999;

.interest-rboxes
  img
    width: 100px;
  .pic, p
    width: 110px;

.people-rboxes
  li
    text-align: center;
  img
    height: 48px;
    width: 48px;

  p.title
    font-size: 13px;
  p
    width: 80px;
    height: 1.3em;
    overflow: hidden;

  p.tags
    font-size: 12px;
    font-weight: 100;
    color: #b3b3b3;
    height: 2.4em;
    text-align: left;

  .rbox-supple
    width: 70px;

  a
    padding: 3px 5px 7px;
    .rbox-supple
      margin-left: -6px;
      margin-top: 7px;


  a:hover
    background: #fafdff;
    border-color: #90d0ec;
    .rbox-supple
      border-color: #90d0ec;
      border-top-color: #d9e3ef;
      background: #fff;


@media (max-width: 768px)
  .rbox-list
    margin: 0 -8px;
